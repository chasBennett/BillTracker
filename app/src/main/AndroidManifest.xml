<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" /> <!-- Devices running Android 13 (API level 33) or higher -->
    <uses-permission android:name="android.permission.READ_MEDIA_VISUAL_USER_SELECTED" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <queries>
        <intent>
            <action android:name="android.intent.action.VIEW" />

            <data android:scheme="mailto" />
        </intent>
    </queries>

    <application

        android:enableOnBackInvokedCallback="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/billsapp"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/billsapp_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BillTracker"
        android:usesCleartextTraffic="true"
        android:windowSoftInputMode="adjustPan"
        tools:targetApi="tiramisu">

        <receiver android:name=".tools.MarkAsPaidReceiver" android:exported="false" />

        <activity
            android:name=".activities.ShareAccount"
            android:exported="false" />
        <activity
            android:name=".activities.ViewBudget"
            android:exported="false" />
        <activity
            android:name=".activities.AddBiller"
            android:exported="false"
            android:hardwareAccelerated="true" />
        <activity
            android:name=".activities.CreateBudget"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.Spending"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.facebook.sdk.ClientToken"
            android:value="@string/facebook_client_token" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-7376638390241452~2472177486" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".activities.Support"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.MyStats"
            android:exported="false"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.Administrator"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".activities.PayBill"
            android:exported="true"
            android:hardwareAccelerated="true"
            android:parentActivityName=".activities.MainActivity2"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.PaymentHistory"
            android:exported="false"
            android:hardwareAccelerated="true"
            android:parentActivityName=".activities.MainActivity2"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.ViewBillers"
            android:exported="false"
            android:hardwareAccelerated="true"
            android:parentActivityName=".activities.MainActivity2"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.ForgotPassword"
            android:exported="false"
            android:label="@string/title_activity_forgot_password"
            android:parentActivityName=".activities.Login"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.MainActivity2"
            android:exported="false"
            android:hardwareAccelerated="true"
            android:label="@string/title_activity_main2"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.Settings"
            android:exported="false"
            android:parentActivityName=".activities.MainActivity2"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.NotificationSettings"
            android:exported="false"
            android:parentActivityName=".activities.Settings"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.EditProfile"
            android:exported="false"
            android:parentActivityName=".activities.Settings"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.EditProfile" />
        <activity
            android:name=".activities.Register"
            android:exported="false"
            android:parentActivityName=".activities.Login"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.Login"
            android:exported="true"
            android:hardwareAccelerated="true"
            android:theme="@style/Fullscreen"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>