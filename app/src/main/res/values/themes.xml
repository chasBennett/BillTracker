<resources>
    <!-- Base application theme. -->
    <style name="Theme.BillTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/accent</item>
        <item name="android:windowBackground">@drawable/bg_login_gradient</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="editTextBackground">@color/white</item>
        <item name="android:textColor">@color/blackAndWhite</item>
        <item name="itemTextColor">@color/white</item>
        <item name="android:textColorHint">@color/lightGrey</item>
        <item name="hintTextColor">@color/lightGrey</item>
        <item name="colorAccent">@color/primary</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="android:colorAccent">@color/primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorButtonNormal">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="alertDialogTheme">@style/MyDialogStyle</item>
        <item name="buttonStyle">@style/TextButton</item>
        <item name="popupMenuStyle">@style/MyPopupMenu</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="textAppearanceHeadline1">@style/AppFontOverride</item>
        <item name="textAppearanceHeadline2">@style/AppFontOverride</item>
        <item name="textAppearanceHeadline3">@style/AppFontOverride</item>
        <item name="textAppearanceHeadline4">@style/AppFontOverride</item>
        <item name="textAppearanceHeadline5">@style/AppFontOverride</item>
        <item name="textAppearanceHeadline6">@style/AppFontOverride</item>
        <item name="textAppearanceSubtitle1">@style/AppFontOverride</item>
        <item name="textAppearanceSubtitle2">@style/AppFontOverride</item>
        <item name="textAppearanceBody1">@style/AppFontOverride</item>
        <item name="textAppearanceBody2">@style/AppFontOverride</item>
        <item name="textAppearanceButton">@style/AppFontOverride</item>
        <item name="textAppearanceCaption">@style/AppFontOverride</item>
        <item name="textAppearanceOverline">@style/AppFontOverride</item>
    </style>

    <style name="Fullscreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="alertDialogTheme">@style/MyDialogStyle</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:colorAccent">@color/primary</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="buttonStyle">@style/TextButton</item>
        <item name="editTextStyle">@style/TextInputEditTextStyle</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:windowBackground">@drawable/bg_login_gradient</item>
        <item name="textAppearanceHeadline1">@style/AppFontOverride</item>
        <item name="textAppearanceHeadline2">@style/AppFontOverride</item>
        <item name="textAppearanceHeadline3">@style/AppFontOverride</item>
        <item name="textAppearanceHeadline4">@style/AppFontOverride</item>
        <item name="textAppearanceHeadline5">@style/AppFontOverride</item>
        <item name="textAppearanceHeadline6">@style/AppFontOverride</item>
        <item name="textAppearanceSubtitle1">@style/AppFontOverride</item>
        <item name="textAppearanceSubtitle2">@style/AppFontOverride</item>
        <item name="textAppearanceBody1">@style/AppFontOverride</item>
        <item name="textAppearanceBody2">@style/AppFontOverride</item>
        <item name="textAppearanceButton">@style/AppFontOverride</item>
        <item name="textAppearanceCaption">@style/AppFontOverride</item>
        <item name="textAppearanceOverline">@style/AppFontOverride</item>
    </style>
    <style name="Theme.EditProfile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/blueAndBlack</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    <style name="AppFontOverride" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
