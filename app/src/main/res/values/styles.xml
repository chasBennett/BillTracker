<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textColorPrimary">@color/billsapp_background</item>
        <item name="android:colorAccent">@color/grey</item>
        <item name="android:textSize">14sp</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blackAndWhite</item>
    </style>

    <style name="NeutralButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColorPrimary">@color/accent</item>
    </style>

    <style name="TextButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="strokeColor">@color/lightGrey</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:hapticFeedbackEnabled">true</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clipChildren">true</item>
        <item name="android:backgroundTint">@color/primary</item>
    </style>

    <style name="MyPopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:dropDownHorizontalOffset">-4dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
    </style>

    <style name="LoginButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="strokeColor">@color/lightGrey</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:hapticFeedbackEnabled">true</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clipChildren">true</item>
        <item name="android:backgroundTint">@color/primary</item>
    </style>

    <style name="DarkSwitch" parent="Theme.AppCompat.DayNight">
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorSwitchThumbNormal">@color/grey</item>
        <item name="trackColorInactive">@color/grey</item>
        <item name="android:colorForeground">#C3C2C2</item>
    </style>

    <style name="TextInputEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="colorControlNormal">@color/whiteAndBlack</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/whiteAndBlack</item>
    </style>

</resources>