<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.BillTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/accent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="editTextBackground">@color/white</item>
        <item name="android:textColor">@color/blackAndWhite</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="itemTextColor">@color/white</item>
        <item name="android:textColorHint">@color/lightGrey</item>
        <item name="hintTextColor">@color/lightGrey</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:colorAccent">@color/primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorButtonNormal">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowOptOutEdgeToEdgeEnforcement">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="alertDialogTheme">@style/MyDialogStyle</item>
        <item name="buttonStyle">@style/TextButton</item>
        <item name="popupMenuStyle">@style/MyPopupMenu</item>
    </style>

</resources>