<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.BillTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="itemTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#424E5A</item>
        <item name="android:textColorHighlight">@color/primary</item>
        <item name="alertDialogTheme">@style/MyDialogStyle</item>
        <item name="colorError">@color/white</item>
        <item name="buttonStyle">@style/TextButton</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:fitsSystemWindows">true</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.EditProfile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/blueAndBlack</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>