<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/border_styles"
    android:elevation="5dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/billerTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="5"
        android:singleLine="false"
        android:text="@string/add_a_new_biller"
        android:textSize="14sp"
        android:textStyle="bold" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="10dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/billerPaid"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="-20dp"
            android:elevation="1dp"
            android:importantForAccessibility="no"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/billerImage"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/green_paid_stamp_removebg_preview" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/billerImage"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:minWidth="65dp"
            android:minHeight="65dp"
            android:scaleType="fitXY"
            android:visibility="visible"
            app:contentPadding="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/Circular"
            app:srcCompat="@drawable/noun_not_found_2503986"
            app:tint="@color/blackAndWhite" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>