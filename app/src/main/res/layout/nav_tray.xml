<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:translationZ="3dp"
    android:weightSum="1"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="300dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/navHeaderBox"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".3"
            android:background="@color/buttonStroke"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="10dp">

            <ImageView
                android:id="@+id/iVLogo"
                android:layout_width="249dp"
                android:layout_height="49dp"
                android:contentDescription="@string/nav_header_desc"
                android:paddingEnd="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias=".15"
                app:srcCompat="@drawable/logo_long"
                tools:ignore="RtlSymmetry" />


            <TextView
                android:id="@+id/logoutButton"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/border_styles"
                android:gravity="center"
                android:onClick="logout"
                android:text="@string/logout"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:backgroundTint="@color/grey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.827"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iVLogo"
                app:layout_constraintVertical_bias="0.25" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iVLogo"
                app:layout_constraintVertical_bias="0.84000003">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/nav_header_title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/blackAndWhite" />

                <TextView
                    android:id="@+id/tvUserName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nav_header_subtitle"
                    android:textColor="@color/blackAndWhite" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".7"
            android:background="@color/tray"
            android:elevation="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/navHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                android:text="@string/navHome"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/ic_baseline_home_24"
                app:drawableTint="@color/button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias=".02" />

            <TextView
                android:id="@+id/navViewBillers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                android:text="@string/navViewBillers"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/ic_baseline_list_alt_24"
                app:drawableTint="@color/blackAndWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/navHome"
                app:layout_constraintVertical_bias=".02" />

            <TextView
                android:id="@+id/navPaymentHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                android:text="@string/navPaymentHistory"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/ic_baseline_calendar_month_24"
                app:drawableTint="@color/blackAndWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/navViewBillers"
                app:layout_constraintVertical_bias=".02" />

            <TextView
                android:id="@+id/myStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                android:text="@string/navInsights"
                android:textColor="@color/blackAndWhite"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/ic_baseline_insights_24"
                app:drawableTint="@color/blackAndWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/navPaymentHistory"
                app:layout_constraintVertical_bias=".02" />

            <TextView
                android:id="@+id/myAchievements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                android:text="@string/my_achievements"
                android:textColor="@color/blackAndWhite"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/award"
                app:drawableTint="@color/blackAndWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/myStats"
                app:layout_constraintVertical_bias=".02" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hideNavDrawer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:alpha="0.5"
        android:background="@color/black"
        android:orientation="vertical"
        android:visibility="visible" />

</LinearLayout>