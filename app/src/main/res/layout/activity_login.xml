<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/progressBar15"
        layout="@layout/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/login_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
    android:id="@+id/login_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Login">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="visible">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/logo"
                app:srcCompat="@drawable/logo_long" />

            <TextView
                android:id="@+id/loginError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center|top|center_vertical"
                android:textColor="@color/primary"
                android:visibility="visible" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="@string/email1"
                android:theme="@style/TextInputEditTextStyle"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:cursorColor="@color/neutralGray"
                app:hintEnabled="true"
                app:hintTextColor="@color/grey"
                app:startIconDrawable="@drawable/email_icon"
                app:startIconScaleType="centerInside"
                app:startIconTint="@color/neutralGray">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/loginUsername"
                    style="@style/Widget.AppCompat.AutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_stroke"
                    android:drawableStart="@drawable/pad"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/white"
                    android:gravity="bottom"
                    android:hyphenationFrequency="normal"
                    android:importantForAutofill="no"
                    android:inputType="textEmailAddress"
                    android:maxLength="50"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColorHint="@color/grey"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="@string/password1"
                android:theme="@style/TextInputEditTextStyle"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:cursorColor="@color/neutralGray"
                app:hintEnabled="true"
                app:hintTextColor="@color/grey"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/primary"
                app:startIconDrawable="@drawable/padlock"
                app:startIconScaleType="centerInside"
                app:startIconTint="@color/neutralGray">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/loginPassword"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_stroke"
                    android:drawableStart="@drawable/pad"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/white"
                    android:gravity="center_vertical"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    android:textColorHint="@color/grey"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/staySignedIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="4dp"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stay_signed_in"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/biometricButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:padding="5dp"
                    android:text="@string/biometric_login"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/baseline_fingerprint_24"
                    app:drawableTint="@color/primary" />
            </LinearLayout>


            <Button
                android:id="@+id/loginButton"
                style="@style/LoginButton"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginVertical="10dp"
                android:background="@null"
                android:stateListAnimator="@null"
                android:text="@string/login"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/forgotPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="10dp"
                android:text="@string/forgot_password"
                android:textSize="14sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/createAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/not_registered_yet"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:background="@color/lightGrey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text="@string/or"
                    android:textColor="@color/grey"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:background="@color/lightGrey" />
            </LinearLayout>

            <TextView
                android:id="@+id/googleButton"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="5dp"
                android:background="@drawable/border_styles_no_outline"
                android:drawablePadding="15dp"
                android:elevation="3dp"
                android:gravity="center"
                android:hapticFeedbackEnabled="true"
                android:paddingHorizontal="10dp"
                android:text="@string/sign_in_with_google"
                android:textAlignment="center"
                android:textColor="@color/grey"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/google_icon" />

        </LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>