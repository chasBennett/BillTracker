<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/border_styles_no_outline"
    android:orientation="vertical"
    android:translationZ="5dp">

    <TextView
        android:id="@+id/visit_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:text="@string/visitBillerWebsite"
        android:textColor="@color/blackAndWhite"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/biller_website"
        app:drawableTint="@color/neutralGray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/edit_bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:gravity="center|start"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:text="@string/edit_biller"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/edit_biller_icon"
        app:drawableTint="@color/blackAndWhite" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/paidOff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:gravity="center|start"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:text="@string/this_bill_is_paid_off"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/baseline_done_all_24"
        app:drawableTint="@color/blackAndWhite" />

</LinearLayout>