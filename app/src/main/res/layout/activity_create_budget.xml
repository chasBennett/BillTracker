                    android:inputType="number"
                    android:text=""
                    android:textSize="14sp"
                    android:importantForAutofill="no"
                    tools:ignore="LabelFor"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/textView876"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".55"
                    android:text="@string/health_budget" />

                <TextView
                    android:id="@+id/healthAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:text=""
                    android:textColor="@color/grey" />

                <EditText
                    android:id="@+id/etHealthPercentage"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight=".2"
                    android:background="@drawable/edit_text"
                    android:gravity="center"
                    android:inputType="number"
                    android:text=""
                    android:textSize="14sp"
                    android:importantForAutofill="no"
                    tools:ignore="LabelFor"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/textView877"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".55"
                    android:text="@string/restaurants_budget" />

                <TextView
                    android:id="@+id/restaurantsAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:text=""
                    android:textColor="@color/grey" />

                <EditText
                    android:id="@+id/etRestaurantsPercentage"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight=".2"
                    android:background="@drawable/edit_text"
                    android:gravity="center"
                    android:inputType="number"
                    android:text=""
                    android:textSize="14sp"
                    android:importantForAutofill="no"
