                    android:layout_weight=".25"
                    android:text=""
                    android:textColor="@color/grey" />

                <EditText
                    android:id="@+id/etGroceriesPercentage"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight=".2"
                    android:background="@drawable/edit_text"
