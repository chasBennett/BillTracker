<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparentBlack"
    android:orientation="vertical"
    tools:ignore="Overdraw">

    <LinearLayout
        android:id="@+id/dismissDrawer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="true"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/drawer_style"
        android:clickable="true"
        android:duplicateParentState="false"
        android:elevation="30dp"
        android:orientation="vertical"
        android:translationY="0dp">

        <LinearLayout
            android:id="@+id/closeDrawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="65dp"
                android:layout_height="6dp"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                android:background="@drawable/border_styles_oval"
                android:backgroundTint="@color/newStroke" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/use_default"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="15dp"
                android:adjustViewBounds="true"
                android:background="@drawable/circle"
                android:backgroundTint="@color/tabs"
                android:padding="8dp"
                app:contentPadding="8dp"
                app:shapeAppearanceOverlay="@style/Circular"
                app:srcCompat="@drawable/default_image"
                app:tint="@color/grayAndWhite" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/use_default_image"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/select_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="15dp"
                android:adjustViewBounds="true"
                android:background="@drawable/circle"
                android:backgroundTint="@color/tabs"
                android:padding="8dp"
                app:contentPadding="6dp"
                app:shapeAppearanceOverlay="@style/Circular"
                app:srcCompat="@drawable/select_user"
                app:tint="@color/grayAndWhite" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/select_image_from_device"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>