<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="15dp"
    android:gravity="center"
    android:translationZ="15dp"
    android:visibility="visible"
    tools:ignore="Overdraw">

    <LinearLayout
        android:id="@+id/instructions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:background="@drawable/border_styles_no_outline"
        android:orientation="vertical"
        android:padding="50dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="30dp"
        android:translationZ="2dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.235">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/logo_long" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="40dp"
            android:gravity="center"
            android:text="@string/ready_to_track_your_bills"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/you_have_added_your_first_biller_and_created_a_budget_now_you_re_ready_to_track_your_bills_and_expenses_using_bill_tracker_s_suite_of_financial_management_tools_feel_free_to_reach_out_to_us_with_any_compliments_or_concerns_via_the_contact_us_link_in_the_menu_and_good_luck_on_your_path_towards_financial_freedom_happy_tracking"
            android:textSize="14sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnGetStarted"
            style="@style/LoginButton"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="25dp"
            android:stateListAnimator="@null"
            android:text="@string/get_started"
            android:textSize="12sp"
            android:translationZ="2dp" />

    </LinearLayout>

    <View
        android:id="@+id/parentView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparentBlack"
        android:backgroundTint="@color/transparentBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/addFirstBiller"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:background="@drawable/border_styles_no_outline"
        android:orientation="vertical"
        android:padding="50dp"
        android:translationZ="2dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/logo_long" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="40dp"
            android:gravity="center"
            android:text="@string/welcomeToBillTracker"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_to_bill_tracker_our_goal_is_to_help_you_to_manage_your_finances_and_grow_your_wealth_let_s_begin_by_adding_your_first_biller_click_the_button_below_to_add_a_biller_now"
            android:textSize="14sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnAddBiller2"
            style="@style/LoginButton"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:stateListAnimator="@null"
            android:text="@string/addABiller"
            android:textSize="12sp"
            android:translationZ="2dp" />

        <TextView
            android:id="@+id/skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:padding="10dp"
            android:text="@string/skip"
            android:textColor="@color/primary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dontAsk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/don_t_ask_again"
            android:textColor="@color/primary"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/addFirstBudget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:background="@drawable/border_styles_no_outline"
        android:orientation="vertical"
        android:padding="50dp"
        android:translationZ="2dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/logo_long" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="40dp"
            android:gravity="center"
            android:text="@string/create_your_budget"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/a_good_budget_is_a_great_way_to_ensure_you_re_saving_enough_for_life_s_surpises_and_will_be_prepared_to_provide_for_those_you_care_most_about_no_matter_what_changes_may_come_create_a_budget_now_by_clicking_the_button_below"
            android:textSize="14sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnCreateBudget"
            style="@style/LoginButton"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:stateListAnimator="@null"
            android:text="@string/create_a_budget"
            android:textSize="12sp"
            android:translationZ="2dp" />

        <TextView
            android:id="@+id/skip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:padding="10dp"
            android:text="@string/skip"
            android:textColor="@color/primary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dontAsk2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/don_t_ask_again"
            android:textColor="@color/primary"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>