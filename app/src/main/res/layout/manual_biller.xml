<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/border_styles_no_outline"
        android:backgroundTint="@color/tabs"
        android:elevation="3dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/backToMain"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_margin="10dp"
            android:importantForAccessibility="no"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/blackAndWhite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_a_new_biller_file"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/billerIcon"
            android:layout_width="136dp"
            android:layout_height="137dp"
            android:layout_marginVertical="10dp"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/budget_icon" />

        <Button
            android:id="@+id/changeIcon"
            style="@style/TextButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginVertical="10dp"
            android:text="@string/change_icon" />

        <EditText
            android:id="@+id/newBillerName"
            android:layout_width="270dp"
            android:layout_height="48dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/border_stroke"
            android:ems="10"
            android:hint="@string/billerName"
            android:importantForAutofill="no"
            android:inputType="text"
            android:padding="10dp" />

        <EditText
            android:id="@+id/newWebsite"
            android:layout_width="270dp"
            android:layout_height="48dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/border_stroke"
            android:ems="10"
            android:hint="@string/website"
            android:importantForAutofill="no"
            android:inputType="text|textWebEmailAddress"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="48dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/border_stroke"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/typeSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical" />
        </LinearLayout>

        <Button
            android:id="@+id/submitManualBiller"
            style="@style/TextButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:text="@string/submitBiller" />

    </LinearLayout>
</ScrollView>