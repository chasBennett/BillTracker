<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:animateLayoutChanges="true"
        android:background="@drawable/border_styles"
        android:backgroundTint="@color/offset"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".EditBiller">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UseSwitchCompatOrMaterialXml">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/editBillerPhotoChooser"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/editBillerIcon1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="false"
                    android:visibility="visible"
                    app:layout_constraintBottom_toTopOf="@+id/leftSide"
                    app:layout_constraintEnd_toStartOf="@+id/guideline2"
                    app:layout_constraintHorizontal_bias="0.12"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.6"
                    app:shapeAppearanceOverlay="@style/Circular"
                    tools:srcCompat="@drawable/invoice" />

                <ImageView
                    android:id="@+id/imageView223"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/circle"
                    android:contentDescription="@string/image_selector_button"
                    android:padding="10dp"
                    app:layout_constraintBottom_toBottomOf="@id/editBillerIcon1"
                    app:layout_constraintEnd_toEndOf="@+id/editBillerIcon1"
                    app:srcCompat="@drawable/ic_baseline_image_search_24"
                    app:tint="@color/grey" />

                <TextView
                    android:id="@+id/billerNameHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/blackAndWhite"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/rightSide"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/rightSide"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/guideline2"
                    app:layout_constraintTop_toTopOf="@+id/guideline3"
                    app:layout_constraintVertical_bias="0.0">

                    <TextView
                        android:id="@+id/textView281"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="3dp"
                        android:text="@string/m"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/category1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center"
                            android:textSize="16sp"
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/amountDueLayout11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView711"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/amountDue1"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/amountDueError1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="@string/amountDueBlank"
                            android:textColor="@color/grey"
                            android:visibility="gone" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/editAmountDue"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text"
                        android:digits="0123456789."
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal"
                        android:maxLength="9"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:singleLine="true"
                        android:textSize="16sp"
                        tools:ignore="LabelFor" />

                    <LinearLayout
                        android:id="@+id/escrowLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/textView261"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="@string/escrow_amount"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/addEscrow1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight=".5"
                            android:background="@drawable/edit_text"
                            android:digits="0123456789.,"
                            android:importantForAutofill="no"
                            android:inputType="number"
                            android:maxLength="12"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:singleLine="true"
                            android:textSize="16sp"
                            tools:ignore="InefficientWeight,LabelFor" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView1511"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:text="@string/frequency"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/editFrequency"
                            style="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".5"
                            android:gravity="center"
                            android:textSize="16sp"
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView1311"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:text="@string/dueDate1"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/editDueDate"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text"
                        android:gravity="center_vertical"
                        android:inputType="none"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text=""
                        android:textColor="@color/quantum_grey500"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnSubmitEdit"
                        style="@style/TextButton"
                        android:layout_width="280dp"
                        android:layout_height="58dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="100dp"
                        android:text="@string/submitBiller" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/leftSide"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/guideline3"
                    app:layout_constraintVertical_bias="0.0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView811"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/k"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/billerNameError1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="@string/l"
                            android:textColor="@color/grey"
                            android:visibility="gone" />

                    </LinearLayout>

                    <AutoCompleteTextView
                        android:id="@+id/editBillerName"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text"
                        android:inputType="textCapWords"
                        android:maxLength="30"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:singleLine="true"
                        android:textSize="16sp"
                        tools:ignore="LabelFor" />

                    <LinearLayout
                        android:id="@+id/websiteLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView911"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/n"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/websiteError1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="@string/websiteIsTooShort"
                            android:textColor="@color/grey"
                            android:visibility="gone" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/editWebsite"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text"
                        android:importantForAutofill="no"
                        android:inputType="textWebEmailAddress"
                        android:maxLength="100"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:singleLine="true"
                        android:textSize="16sp"
                        tools:ignore="LabelFor" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/editRecurring"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/recurring"
                        android:textSize="16sp"
                        app:theme="@style/DarkSwitch" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/continuousSwitch1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:minHeight="48dp"
                        android:text="@string/set_payments_until_paid_off"
                        android:textSize="16sp"
                        android:visibility="gone"
                        app:theme="@style/DarkSwitch" />

                    <LinearLayout
                        android:id="@+id/numberOfPaymentsLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/textView2111"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="@string/payments_remaining"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/addNumberOfPayments1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/edit_text"
                            android:digits="0123456789.,"
                            android:hint="@string/continuous"
                            android:importantForAutofill="no"
                            android:inputType="number"
                            android:maxLength="12"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:singleLine="true"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/currentBalanceLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView7171"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/current_balance"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/estimatedRate1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="@string/estimated_apr"
                                android:textStyle="italic" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/etcurrentBalance1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight=".5"
                            android:background="@drawable/edit_text"
                            android:digits="0123456789.,"
                            android:importantForAutofill="no"
                            android:inputType="numberDecimal"
                            android:maxLength="12"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:singleLine="true"
                            android:textSize="16sp"
                            tools:ignore="InefficientWeight" />

                    </LinearLayout>

                </LinearLayout>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="760dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintGuide_percent="0.5"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintGuide_begin="219dp"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/useDefaultIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/use_default_icon"
                    android:textColor="@color/fingerprint"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@+id/leftSide"
                    app:layout_constraintEnd_toStartOf="@+id/guideline2"
                    app:layout_constraintHorizontal_bias="0.12"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editBillerIcon1"
                    app:layout_constraintVertical_bias="1.0" />

                <LinearLayout
                    android:id="@+id/pb5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha=".6"
                    android:background="#000000"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ProgressBar
                        android:id="@+id/progressBar25"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/backEditBillerLayout"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/backEditBiller"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:contentDescription="@string/back_button"
                        app:srcCompat="@drawable/ic_baseline_arrow_back_24"
                        app:tint="@color/blackAndWhite" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>